{
  "name": "craft-and-culture-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "dev:web": "pnpm --filter web run dev",
    "dev:server": "pnpm --filter server run dev",
    "build": "pnpm --recursive run build",
    "start": "pnpm --parallel run start",
    "lint": "pnpm --recursive run lint",
    "type-check": "pnpm --recursive run type-check",
    "test": "pnpm --recursive run test",
    "db:migrate": "pnpm --filter server exec prisma migrate dev",
    "db:generate": "pnpm --filter server exec prisma generate",
    "db:push": "pnpm --filter server exec prisma db push",
    "db:studio": "pnpm --filter server exec prisma studio",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "pnpm --filter web run storybook",
    "prepare": "husky"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.2.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.15.0"
}
